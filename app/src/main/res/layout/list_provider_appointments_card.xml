<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="15dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:id="@+id/providerAppointmentCardView"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/providerAppointmentTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Appointment Title"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/providerAppointmentDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/providerAppointmentTitleTextView"
                android:layout_marginTop="10dp"
                android:text="Appointment Date"

                android:textColor="@color/black"
                android:textSize="15dp"

                />

            <TextView
                android:id="@+id/providerAppointmentCustomerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/providerAppointmentDateTextView"
                android:text="Customer Name"

                android:textSize="15dp"
                android:textColor="@color/black"

                />


        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>