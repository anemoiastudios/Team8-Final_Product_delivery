<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProviderAppointmentsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/providerAppointmentsAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/providerAppointmentsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Appointments"
            app:titleCentered="true"
            app:titleTextColor="@color/white"
            app:menu="@menu/provider_appointments_top_app_bar"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/providerRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/providerAppointmentsAppBarLayout"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/providerAppointmentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/providerRequestsRecyclerView" />

</RelativeLayout>