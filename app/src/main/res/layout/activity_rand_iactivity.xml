<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandIActivity"

    android:padding="10dp"
    >

    <RelativeLayout
        android:id="@+id/rAndITitleRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/resourcesAndInformationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/resources_and_information"
            android:fontFamily="@font/outfit_medium"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rAndIRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/rAndITitleRelativeLayout"
        android:layout_marginTop="10dp"

        />




</RelativeLayout>