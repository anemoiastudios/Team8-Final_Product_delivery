<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerDoctorsNoteActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/customerDoctorsNoteAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/customerDoctorsNoteToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:title="Doctor's Note"
            app:titleCentered="true"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
            app:menu="@menu/customer_private_information_entries_top_app_bar"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerDoctorsNoteAppBarLayout"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Doctor's Notes goes here. Whatever the doctor thinks yay."
                android:textSize="20sp"

                />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>