<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"

    android:id="@+id/customerProviderProfileDiscussionCardView"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            >

            <LinearLayout
                android:id="@+id/customerProviderProfileStroke"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:background="#E6E6FA"
                android:orientation="horizontal"

                />

            <TextView
                android:id="@+id/customerProviderProfileDiscussionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/customerProviderProfileStroke"
                android:layout_marginTop="20dp"
                android:text="Discussion Title"
                android:textAlignment="center"

                android:textSize="25dp"

                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/customerProviderProfileDiscussionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Discussion Date"
                android:textAlignment="center"

                android:layout_below="@+id/customerProviderProfileDiscussionTitle"

                />


        </RelativeLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>