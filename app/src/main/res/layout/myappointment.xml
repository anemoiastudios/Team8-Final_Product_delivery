<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFD3D3D3"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:cardCornerRadius="4dp"
        android:foregroundGravity="center"
        android:padding="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/appointmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[appointmentType]"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/AppointmentName"
                android:layout_below="@id/appointmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For AppointmentName"
                android:textSize="15dp"
                android:textColor="#F0AA5F"

                />

            <TextView
                android:id="@+id/date"
                android:layout_below="@id/AppointmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[MMMEd][jm]"
                android:textSize="18dp"
                />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

