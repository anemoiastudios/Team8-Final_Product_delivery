<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerPrivateInformationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/customerPrivateInformationAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/customerPrivateInformationToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:title="Private Information"
            app:titleCentered="true"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
            app:menu="@menu/customer_private_information_top_app_bar"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <ListView
        android:id="@+id/customerPrivateInformationListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customerPrivateInformationAppBarLayout"
        />


</RelativeLayout>