<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="380dp"
    android:layout_height="100dp"

    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="15dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:id="@+id/providerRequestCard"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/providerRequestCustomerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Customer Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/providerRequestNoteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="is requesting an appointment"
                android:textSize="15sp"

                android:layout_below="@+id/providerRequestCustomerNameTextView"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/providerRequestDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="at 10/14/22 5:30 PM"
                android:textSize="15sp"

                android:layout_below="@+id/providerRequestNoteTextView"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"

            >

            <ImageButton
                android:id="@+id/providerRequestCheckImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#e6e6fa"
                android:src="@drawable/ic_baseline_check_24"

                />

            <ImageButton
                android:id="@+id/providerRequestDenyImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_do_not_disturb_24"
                android:background="#E6E6FA"

                android:layout_toRightOf="@+id/providerRequestCheckImageButton"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>





    </RelativeLayout>



</androidx.cardview.widget.CardView>